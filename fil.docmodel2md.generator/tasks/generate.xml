<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="fil.docmodel2md.generator">
    <property name="ECLIPSE_HOME" value="../../../../../../Programmes/eclipse/modeling-2021-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../runtime-EclipseApplication"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="fil.docmodel2md.generator.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/fil.docmodel2md.generator/bin"/>
    </path>

    <path id="fil.docmodel2md.generator.classpath">
        <path refid="fil.docmodel2md.generator.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="fil.docmodel2md.generator.libraryclasspath.alljars">
        <pathelement location="../fil.docmodel2md.generator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="fil.docmodel2md.generator.classpath.alljars">
        <path refid="fil.docmodel2md.generator.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="fil.docmodel2md.generator.main.Generate" classpathref="fil.docmodel2md.generator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="fil.docmodel2md.generator.main.Generate" classpathref="fil.docmodel2md.generator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
